# Environment Variables for Cryptocurrency Market Analyzer
# Copy this file to .env and fill in your values

# ============================================
# Kafka Configuration
# ============================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=crypto-prices
KAFKA_CONSUMER_GROUP=crypto-analyzer-group

# ============================================
# CoinGecko API (Optional - for higher rate limits)
# ============================================
# Get API key from: https://www.coingecko.com/en/api/pricing
# Free tier: 10-50 requests/minute
# COINGECKO_API_KEY=your_api_key_here

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=crypto_db
POSTGRES_USER=crypto_user
POSTGRES_PASSWORD=crypto_pass

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=  # Set if Redis requires authentication

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development  # development or production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ============================================
# Notes
# ============================================
# - Never commit .env file to Git (it's in .gitignore)
# - For production, use proper secrets management (Vault, AWS Secrets Manager)
# - Update ports if you changed them in docker-compose.yml
